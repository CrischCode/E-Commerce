@page "/productos"
@using Ecommerce.Shared.DTOs
@using E_Commerce_Frontend.Interfaces
@using System.ComponentModel.DataAnnotations
@inject IProductoService ProductoService
@inject IJSRuntime JS
@inject HttpClient Http 

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h3 class="mb-0 text-primary fw-bold">üì¶ Gesti√≥n de Inventario</h3>
            <button class="btn btn-primary px-4 shadow-sm" @onclick="() => AbrirModal()">
                <i class="bi bi-plus-lg"></i> Nuevo Producto
            </button>
        </div>
        <div class="card-body">
            @if (productos == null)
            {
                <div class="d-flex justify-content-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-3">Producto</th>
                                <th>Precio</th>
                                <th>Stock</th>
                                <th>Categor√≠a</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in productos)
                            {
                                <tr>
                                    <td class="ps-3 fw-semibold">@p.Nombre</td>
                                    <td><span class="text-success fw-bold">@p.Precio.ToString("C")</span></td>
                                    <td>
                                        <span class="badge @(p.Existencias < 5 ? "bg-danger" : "bg-light text-dark")">
                                            @p.Existencias unidades
                                        </span>
                                    </td>
                                    <td><span class="badge rounded-pill bg-info text-dark">@p.Categoria</span></td>
                                    <td class="text-center">
                                        @* BOTONES CON NOMBRES *@
                                        <button class="btn btn-outline-warning btn-sm me-2" @onclick="() => AbrirModal(p)">
                                            <i class="bi bi-pencil"></i> Editar
                                        </button>
                                        <button class="btn btn-outline-danger btn-sm" @onclick="() => Eliminar(p)">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <span class="text-muted small">P√°gina @paginaActual de @totalPaginas</span>
                    <nav>
                        <ul class="pagination pagination-sm mb-0 shadow-sm">
                            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="() => Cargar(paginaActual - 1)">Anterior</button>
                            </li>
                            @for (int i = 1; i <= totalPaginas; i++)
                            {
                                int j = i;
                                <li class="page-item @(paginaActual == j ? "active" : "")">
                                    <button class="page-link" @onclick="() => Cargar(j)">@j</button>
                                </li>
                            }
                            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                                <button class="page-link" @onclick="() => Cargar(paginaActual + 1)">Siguiente</button>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>

@if (mostrarModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5); z-index: 1050;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header @(esEdicion ? "bg-warning" : "bg-primary text-white")">
                    <h5 class="modal-title fw-bold">@(esEdicion ? "üìù Editar Producto" : "‚ú® Nuevo Producto")</h5>
                    <button type="button" class="btn-close" @onclick="CerrarModal"></button>
                </div>
                <EditForm Model="modelo" OnValidSubmit="Guardar">
                    <DataAnnotationsValidator />
                    <div class="modal-body p-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre</label>
                            <InputText @bind-Value="modelo.Nombre" class="form-control" />
                            <ValidationMessage For="@(() => modelo.Nombre)" class="text-danger small" />
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label class="form-label fw-bold">Precio</label>
                                <InputNumber @bind-Value="modelo.Precio" class="form-control" />
                            </div>
                            <div class="col-6 mb-3">
                                <label class="form-label fw-bold">Stock</label>
                                <InputNumber @bind-Value="modelo.Existencias" class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Categor√≠a</label>
                            <select class="form-select" @bind="modelo.IdCategoria">
                                <option value="0">Seleccionar...</option>
                                @foreach (var cat in categorias)
                                {
                                    <option value="@cat.Id_Categoria">@cat.Nombre</option>
                                }
                            </select>
                            <ValidationMessage For="@(() => modelo.IdCategoria)" class="text-danger small" />
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
                        <button type="submit" class="btn btn-primary fw-bold">Guardar Cambios</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<ProductoReadtDtos>? productos;
    private List<CategoriaDto> categorias = new();
    private int paginaActual = 1;
    private int tama√±oPagina = 10;
    private int totalItems;
    private int totalPaginas => (int)Math.Ceiling((double)totalItems / tama√±oPagina);

    private bool mostrarModal = false;
    private bool esEdicion = false;
    private int idEditar;
    private ProductoFormModel modelo = new();

    protected override async Task OnInitializedAsync()
    {
        await Cargar();
        try {
            categorias = await Http.GetFromJsonAsync<List<CategoriaDto>>("api/Categoria") ?? new();
        } catch { }
    }

    private async Task Cargar(int pagina = 1)
    {
        paginaActual = pagina;
        var response = await ProductoService.GetPagedAsync(paginaActual, tama√±oPagina);
        productos = response.Items;
        totalItems = response.TotalCount;
    }

    private void AbrirModal(ProductoReadtDtos? p = null)
    {
        if (p != null) {
            esEdicion = true;
            idEditar = p.IdProducto;
            modelo = new ProductoFormModel { Nombre = p.Nombre ?? "", Precio = p.Precio, Existencias = p.Existencias, IdCategoria = p.IdCategoria };
        } else {
            esEdicion = false;
            modelo = new ProductoFormModel();
        }
        mostrarModal = true;
    }

    private void CerrarModal() => mostrarModal = false;

    private async Task Guardar()
    {
        bool exito = esEdicion 
            ? await ProductoService.UpdateAsync(idEditar, new ProductoUpdateDto { Nombre = modelo.Nombre, Precio = modelo.Precio, Existencias = modelo.Existencias, IdCategoria = modelo.IdCategoria })
            : await ProductoService.CreateAsync(new ProductoCreateteDtos { Nombre = modelo.Nombre, Precio = modelo.Precio, Existencias = modelo.Existencias, IdCategoria = modelo.IdCategoria });

        if (exito) {
            CerrarModal();
            await Cargar(paginaActual);
        }
    }

    private async Task Eliminar(ProductoReadtDtos p)
    {
        var confirmado = await JS.InvokeAsync<bool>("confirm", $"¬øEst√°s seguro de que deseas eliminar '{p.Nombre}'?");
        if (confirmado) {
            if (await ProductoService.DeleteAsync(p.IdProducto)) await Cargar(paginaActual);
        }
    }

    public class ProductoFormModel {
        [Required(ErrorMessage = "El nombre es obligatorio")] public string Nombre { get; set; } = "";
        [Range(0.01, 999999, ErrorMessage = "Precio inv√°lido")] public decimal Precio { get; set; }
        public int Existencias { get; set; }
        [Range(1, int.MaxValue, ErrorMessage = "Elija una categor√≠a")] public int IdCategoria { get; set; }
    }

    public class CategoriaDto {
        public int Id_Categoria { get; set; }
        public string? Nombre { get; set; }
    }
}