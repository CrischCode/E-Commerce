@page "/catalogoCliente"
@using Ecommerce.Shared.DTOs
@using E_Commerce_Frontend.Interfaces
@inject ICatalogo CatalogoService
@inject ICarrito CarritoService
@inject IJSRuntime JS

<div class="container-fluid p-0 bg-light min-vh-100">
    <div class="ecommerce-hero">
        <div class="hero-overlay"></div>
        <div class="container py-5 position-relative">
            <div class="row pt-5">
                <div class="col-lg-7 text-white animate__animated animate__fadeIn">
                    <span class="badge rounded-pill bg-info mb-3 px-4 py-2">COLECCIÓN 2026</span>
                    <h1 class="display-3 fw-bolder mb-3">Tecnología de <br /><span class="text-info">Vanguardia</span></h1>
                    <p class="fs-5 opacity-75">Encuentra los mejores dispositivos con garantía oficial y envío inmediato.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container search-wrapper">
        <div class="glass-search p-3 shadow-lg border-0">
            <div class="row g-3 align-items-center">
                <div class="col-md-6 position-relative">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" class="form-control border-0 bg-transparent ps-5" 
                           placeholder="Buscar por nombre o marca..." @bind="textoBusqueda" @bind:event="oninput" @onkeyup="Filtrar" />
                </div>
                <div class="col-md-4">
                    <select class="form-select border-0 bg-transparent fw-bold text-muted" @onchange="OnCategoriaChanged">
                        <option value="">Todas las Categorías</option>
                        @foreach (var cat in categorias)
                        {
                            <option value="@cat.Nombre">@cat.Nombre</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100 rounded-pill fw-bold py-2 shadow-sm" @onclick="Filtrar">
                        Buscar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-5">
        @if (productos == null)
        {
            <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
                @foreach (var prod in productos)
                {
                    <div class="col animate__animated animate__fadeInUp">
                        <div class="card h-100 modern-card border-0 shadow-sm">
                            <div class="card-img-container p-3">
                                @if (prod.Existencias <= 3 && prod.TieneStock)
                                {
                                    <span class="stock-alert">¡Casi agotado!</span>
                                }
                                <img src="@(string.IsNullOrEmpty(prod.UrlImage) ? "https://placehold.co/400x400?text=Sin+Imagen" : prod.UrlImage)" 
                                     class="card-img-top img-fit" alt="@prod.Nombre">
                            </div>
                            <div class="card-body">
                                <small class="text-info fw-bold text-uppercase">@prod.CategoriaNombre</small>
                                <h5 class="card-title fw-bold mb-1">@prod.Nombre</h5>
                                <p class="card-text text-muted small text-truncate-2">@prod.Descripcion</p>
                            </div>
                            <div class="card-footer bg-transparent border-0 d-flex justify-content-between align-items-center pb-4 px-3">
                                <span class="h4 fw-bold mb-0 text-dark">@prod.Precio.ToString("C")</span>
                                <button class="btn btn-primary rounded-pill px-3 d-flex align-items-center gap-2 shadow-sm btn-hover-effect" 
                                        @onclick="() => AgregarAlCarrito(prod)" 
                                        disabled="@(!prod.TieneStock)">
                                    <i class="bi bi-cart-plus-fill fs-5"></i>
                                    <span>Agregar</span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .ecommerce-hero {
        background: url('https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=2070&auto=format&fit=crop');
        background-size: cover; background-position: center; min-height: 350px; position: relative;
    }
    .hero-overlay { position: absolute; top:0; left:0; width:100%; height:100%; background: rgba(0,0,0,0.65); }
    .search-wrapper { margin-top: -45px; position: relative; z-index: 5; }
    .glass-search { background: white; border-radius: 50px; }
    .search-icon { position: absolute; left: 20px; top: 12px; color: #0d6efd; z-index: 10; }
    .modern-card { border-radius: 20px; transition: transform 0.3s, box-shadow 0.3s; }
    .modern-card:hover { transform: translateY(-10px); box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important; }
    .card-img-container { height: 200px; display: flex; align-items: center; justify-content: center; position: relative; background: #fbfbfb; border-radius: 20px 20px 0 0; }
    .img-fit { max-height: 100%; object-fit: contain; }
    .stock-alert { position: absolute; top: 15px; right: 15px; background: #ef4444; color: white; padding: 4px 12px; border-radius: 30px; font-size: 0.7rem; font-weight: bold; }
    .btn-hover-effect { transition: all 0.2s; }
    .btn-hover-effect:hover:not(:disabled) { transform: scale(1.05); }
    .text-truncate-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
</style>

@code {
    private List<ProductoReadClienteDto>? productos;
    private List<CategoriaDto> categorias = new();
    private string textoBusqueda = "";
    private string categoriaSeleccionada = "";

    protected override async Task OnInitializedAsync() {
        try {
            categorias = await CatalogoService.GetCategoriasAsync();
            await CargarProductos();
        } catch(Exception ex) { Console.WriteLine(ex.Message); }
    }

    private async Task CargarProductos() {
        var res = await CatalogoService.GetPagedAsync(1, 12, textoBusqueda, categoriaSeleccionada);
        productos = res?.Data;
    }

    private async Task Filtrar() => await CargarProductos();
    private async Task OnCategoriaChanged(ChangeEventArgs e) {
        categoriaSeleccionada = e.Value?.ToString() ?? "";
        await CargarProductos();
    }

    private async Task AgregarAlCarrito(ProductoReadClienteDto p) {
        var ok = await CarritoService.AgregarProductoAsync(1, p.IdProducto, 1);
        if (ok) {
            await JS.InvokeVoidAsync("Swal.fire", new {
                title = "¡Añadido!",
                text = $"{p.Nombre} se agregó a tu carrito",
                icon = "success",
                toast = true,
                position = "top-end",
                timer = 2000,
                showConfirmButton = false
            });
        }
    }
}